@model BookViewModel


<div class="row order-12">

    <form asp-controller="Book" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Update Book</h3>
        @Html.HiddenFor(p => Model.Book.BookId)
        <div class="form-group">

            <label asp-for="Book.Author" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                @Html.DropDownListFor(p => p.Book.AuthorId, new SelectList(Model.Authors.Select(p => new { value = p.AuthorId, Text = p.Name }), "Value", "Text"), "Select an author",
                htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <a class="btn btn-success" style="width:100%" asp-controller="Author" asp-action="Create">Create an Author</a>
            </div>
        </div>

        <div class="form-group">

            <div>

                <label asp-for="Book.Title" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Book.Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>

            </div>


            <div class="form-group">

                <div class="btn-group col-md-offset-2 col-md-6">

                    <input class="btn btn-default" type="submit" value="Return" asp-controller="Book" />
                    <input class="btn btn-success" type="submit" value="Create" />

                </div>

            </div>

        </div>

    </form>


</div>
